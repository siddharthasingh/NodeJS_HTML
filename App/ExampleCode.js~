var a ,b;
    
function addTwoNumber(a,b,flag){
  
	if(flag==true)
	{
	var ansD = document.getElementById("answer");
	ansD.value = parseInt(a) + parseInt(b);
	}
	else{
	return a+b;
  	}	
}



function multiplyTwoNumber(a,b,flag){
  if(flag==true)
	{
	var ansD = document.getElementById("answer");
	ansD.value = parseInt(a) * parseInt(b);
	}
	else{
	return a*b;
  	}	
}
